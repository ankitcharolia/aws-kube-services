{
    "Version":"2012-10-17",
    "Statement":[
      {
        "Effect":"Allow",
        "Action":[
          "s3:ListBucket",
          "s3:ListAllMyBuckets",
          "s3:GetBucketLocation"
        ],
        "Resource":"arn:aws:s3:::*"
      },
      {
        "Effect":"Deny",
        "Action":[
          "s3:ListBucket"
        ],
        "NotResource":[
          "arn:aws:s3:::terraform-kube-state",
          "arn:aws:s3:::terraform-kube-state/*"
        ]
      },
      {
        "Effect":"Allow",
        "Action":[
          "s3:ListBucket",
          "s3:GetObject"
        ],
        "Resource":[
          "arn:aws:s3:::terraform-kube-state",
          "arn:aws:s3:::terraform-kube-state/*"
        ]
      }
    ]
  }